@using Volo.CmsKit.Public.Web.Pages.CmsKit.Shared.Components.Tags

@model TagViewComponent.TagViewModel

    <div>
        <div class="p-3 my-3 card">
            <div class="row">
                <div class="col-auto text-left">
                    <span class="area-title">
                        Tags
                    </span>
                </div>
                <div class="col text-right">
                    <div class="cms-tags-area">
                        @if (Model.Tags != null)
                        {
                            foreach (var tag in Model.Tags)
                            {
                                <span class="badge badge-light px-3 py-2 cmskit-tag font-weight-normal">
                                    @tag.Name
                                </span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .reaction-in-comment span.area-title {
            display: none;
        }

        span.area-title {
            font-weight: 600;
            padding: 3px;
            display: block;
        }
    </style>